<!DOCTYPE html>
<html>
  <head>
    <title>ユーザー作成</title>
    <% include um_head %>
 	<script>

    	function cancel(){
    		location.href='/'
    		return false;
    	}

    	function create(){
			if (confirm("新規ユーザーを作成します。よろしいですか？")) {
				document.form.submit();
			} else {
				return false;
			}
    	}

		$(function(){
			$('#cancel').click(cancel);
			$('#send').click(create);
		});
    </script>
  </head>
  <body>
   <% include um_navbar %>
   <% include um_messages %>
   <div class="container" role="main">
   <form class="form-horizontal" role="form" action="/auth/user" method="post">
    <div class="form-group">
        <label for="username" class="col-sm-3">ユーザーID</label>
        <div class="col-sm-9">
        <input class="form-control" type="text" id="username" name="username" value="<%= username %>" placeholder="ユーザーIDを入力して下さい。"/>
        </div>
    </div>
    <div class="form-group">
        <label for="password" class="col-sm-3">パスワード</label>
        <div class="col-sm-9">
        <input class="form-control" type="password" id="password" name="password" value="<%= password %>" placeholder="パスワードを入力して下さい。"/>
        </div>
    </div>
    <div class="form-group">
        <label for="password_confirm" class="col-sm-3">パスワード （確認）</label>
        <div class="col-sm-9">
        <input class="form-control" type="password" id="password_confirm" name="password_confirm"  value="<%= password_confirm %>"placeholder="パスワードをもう一度入力して下さい。"/>
        </div>
    </div>
    <div class="form-group">
        <label for="surname" class="col-sm-3">姓</label>
        <div class="col-sm-9">
        <input class="form-control" type="text" id="surname" name="surname"  value="<%= surname %>" placeholder="姓を入力して下さい。"/>
        </div>
    </div>
    <div class="form-group">
        <label for="firstname" class="col-sm-3">名</label>
        <div class="col-sm-9">
        <input class="form-control" type="text" id="firstname" name="firstname"  value="<%= firstname %>" placeholder="名前を入力して下さい。"/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3">ロール</label>
        <div class="col-sm-9 checkbox">
        <% for (var i = 0;i < roles.length;i++){ %>
                <input type="checkbox" id="<%= roles[i].id %>" name="roles[]" value="<%= roles[i].id %>"
                 <% if(roles[i].checked) { %>checked = 'checked'<% } %>
                /><label for="<%= roles[i].id %>"><%= roles[i].desc %></label><br>
        <% } %>
        </div>
    </div>
    <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
	  	<button id="cancel" class="btn btn-default">キャンセル</button>
    	<button id="create" class="btn btn-default">作成</button>
    </div>
    </div>
    </form>
	</div>
  </body>
</html>
